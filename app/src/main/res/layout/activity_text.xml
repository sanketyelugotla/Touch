<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6FAF6"
    android:fillViewport="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/meal_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/meal_page_4"
            android:scaleType="fitStart"
            android:adjustViewBounds="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meal Approved"
            android:layout_marginTop="315dp"
            android:layout_marginStart="100dp"
            android:textColor="#5BBD21"
            android:textSize="25sp"
            android:fontFamily="@font/nunito_black"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/mess_gif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="350dp"
            android:src="@drawable/mess_gif"
            android:scaleType="fitStart"
            android:adjustViewBounds="true" />


        <TextView
            android:id="@+id/meal_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dinner"
            android:layout_marginTop="105dp"
            android:layout_marginStart="170dp"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:fontFamily="@font/nunito_black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/meal_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12223854"
            android:layout_marginTop="140dp"
            android:layout_marginStart="170dp"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:fontFamily="@font/nunito_black"
            android:textStyle="bold"
            tools:ignore="DuplicateIds" />


        <TextView
            android:id="@+id/meal_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yelugotla Sanket"
            android:layout_marginTop="165dp"
            android:layout_marginStart="170dp"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:fontFamily="@font/nunito_black"
            android:textStyle="bold"
            tools:ignore="DuplicateIds" />


    </FrameLayout>

</ScrollView>
